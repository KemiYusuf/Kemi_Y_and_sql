---creating a 2nd table called salary table----


create table Salary (
salary_id int identity (1,1)not null,
staffid varchar (255),
firstname varchar (255),
lastname varchar (255),
department varchar (255),
salary decimal (10, 3)
)

select * from [dbo].[Salary]


