create database LITA_DB

CREATE TABLE Employee (
staffid varchar (255) not null,
FirstName varchar (255) NOT NULL,
SecondName varchar (255),
Gender varchar (10),
Date_of_birth date,
HireDate datetime,
primary key (staffid)
)

select * from Employee

